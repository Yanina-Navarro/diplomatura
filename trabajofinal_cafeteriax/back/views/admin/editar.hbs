<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Editar Producto</h4>
            <form action="/admin/productos/editar" method="post" enctype="multipart/form-data" />
            <input type="hidden" value="{{producto.id}}" name="id">
            <div class="form-group">
                <div class="col-sm-10" style="margin-top: 30px;">
                    <label for="inputtitulo" class="form-label">Título</label>
                    <input type="text" class="form-control" id="inputtitulo" name="titulo" value="{{producto.titulo}}">
                </div>
                <div class="col-sm-10" style="margin-top: 30px;">
                    <label for="inputdescripcion" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="inputdescripcion" name="descripcion"
                        value="{{producto.descripcion}}">
                </div>
                <div class="col-sm-10" style="margin-top: 20px;">
                    <label for="inputstock" class="form-label">Stock</label>
                    <input type="text" class="form-control" id="inputstock" name="stock" value="{{producto.stock}}">
                </div>
                <div class="col-sm-10" style="margin-top: 30px;">
                    <label for="inputprecio" class="form-label">Precio</label>
                    <input type="text" class="form-control" id="inputprecio" name="precio" value="{{producto.precio}}">
                </div>
                <div class="form-group" style="margin-top: 30px;">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen
                            actual?</label>
                        <input type="hidden" name="img_original" value="{{producto.img_id}}">
                    </p>
                </div>
                <div class="col-10" style="margin-top: 30px;">
                    <button type="submit" class="btn btn-primary">Guardar Edición</button>
                </div>
                </form>
                {{#if error}}
                <p>{{message}}</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>