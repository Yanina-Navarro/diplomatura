<div class="container" style="margin-top: 50px;">
    <div class="row">
        <p class="text-end">Hola {{usuario}}!
            <a class="btn btn-danger" href="/admin/login/logout">Cerrar Sesión <i class="fas fa-sign-out-alt"></i></a>
        </p>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de Productos</h3>
        </div>
        <div class="col 5- text-end">
            <a class="btn btn-success" href="/admin/productos/agregar">
                <i class="fa fa-plus" aria-hidden="true"></i>
                Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Título</th>
                        <th scope="col">Precio</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{{imagen}}}</td>
                        <td>{{titulo}}</td>
                        <td>$ {{precio}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" href="/admin/productos/editar/{{id}}"><i
                                    class="fa-solid fa-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-secondary" href="/admin/productos/eliminar/{{id}}"><i class="fa fa-trash"
                                    aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>